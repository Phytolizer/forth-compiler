{
    "version": 3,
    "configurePresets": [
        {
            "name": "dev-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "flags-unix",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic"
            }
        },
        {
            "name": "flags-windows",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "/W4 /permissive-"
            }
        }
    ]
}
